<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Code Sets"
            id="ca.ucalgary.codesets">
      </category>
      <view
            name="Old View"
            icon="icons/sample.gif"
            category="ca.ucalgary.codesets"
            class="ca.ucalgary.codesets.views.CodeSetView"
            id="ca.ucalgary.codesets.views.CodeSetView">
      </view>
      <view
            name="All Sets"
            icon="icons/sample.gif"
            category="ca.ucalgary.codesets"
            class="ca.ucalgary.codesets.views.SelectionView"
            id="ca.ucalgary.codesets.views.SelectionView">
      </view>
      <view
            name="Code Set"
            icon="icons/sample.gif"
            category="ca.ucalgary.codesets"
            class="ca.ucalgary.codesets.views.AdvancedView"
            id="ca.ucalgary.codesets.views.MainSectionView">
      </view>
      <view
            name="Combined set"
            icon="icons/sample.gif"
            category="ca.ucalgary.codesets"
            class="ca.ucalgary.codesets.views.CombinedView"
            id="ca.ucalgary.codesets.views.CombinedView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="ca.ucalgary.codesets.views.CodeSetView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
